<MyGrid>:

    location: location
    time: time
    reco: reco

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2
            size: root.width, root.height/2

            Label:
                text: "What is your current location?"

            TextInput:
                id: location
                multiline: False

            Label:
                text: "How much time would you like to spend?"

            TextInput:
                id: time
                multiline: False

            Label:
                text: "How much location recommendations would you like to receive?"

            TextInput:
                id: reco
                multiline: False

        Button:
            text: "Submit"
            on_press: root.btn()