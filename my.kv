<MyGrid>:

    location: location
    time: time
    reco: reco

    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'bicycle.jpg'

    GridLayout:
        cols:1
        size: root.width, root.height

        Label:

            text: "BIKE SHARE"
            size_hint: 0.8, 0.2
            pos_hint: {"x":0.1, "top":1}
            font_size: 60
            color: 0,0,0,1

        GridLayout:

            cols:2
            size: root.width, root.height/2

            Label:
                text: "What is your current location?"
                font_size: 20

            TextInput:
                id: location
                multiline: False
                background_color: 0, 0, 0, 0.5

            Label:
                text: "How much time would you like to spend?"
                font_size: 20

            TextInput:
                id: time
                multiline: False
                background_color: 0, 0, 0, 0.5

            Label:
                text: "How much location recommendations \n would you like to receive?"
                font_size: 20

            TextInput:
                id: reco
                multiline: False
                background_color: 0., 0, 0, 0.5

        Button:
            text: "Recommend me"
            color: 0,0,0,1
            on_press: root.btn()
            font_size: 40
            background_color: 0.145, 0.145, 0.145, 0.5